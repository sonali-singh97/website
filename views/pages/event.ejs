<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/font/flaticon.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <header  class="header-3">
        <div class="header__logo-box">
            <img src="/images/logo.png" class="header__logo" alt="logo" />
            <h2 class="header__org-name">Developer Students Club</h2>
          </div>
          <a class="btn btn--main" href="#"> Join us</a>
    </header>

    <main>
        <div class="event-heading">

           
         <h2 class="heading-secondary"><%=eventName%></h2>
        </div>
        <section class="section-event">
          
            <div class="section-event_img">
                <div class="section-event_img-bg"> 
                    &nbsp;
                 </div>

                 
                  
            <img  class="section-event_bg" src="/images/circle.svg" alt="">
          
            <img src="/images/upload/<%=eventBanner%>" alt="">
            <!-- <i class="flaticon-circles-doodle"></i> -->
        </div>
            <div class="event__info">
                <span class="event__info-calendar">
                 <i class="flaticon-calendar"></i>
                  <p>Date: <%=eventDate%></p>
                </span>
                <span class="event__info-time">
                    <i class="flaticon-time"></i>
                    <p>Time:<%=eventTime%></p>
                </span>
                <span class="event__info-duration">
                    <i class="flaticon-long-term"></i>
                    <p>Duration: <%=eventDuration%>hr</p>
                </span>
            </div>
        </section>
        <section class="event__details">
           <div class="event__details-text">
               <div class="event__details-heading">
               <i class="flaticon-right-arrow"></i>
         <h3>About the event</h3>
        </div>
         <p><%=eventDetails%>
               </p>

               <p><a href="<%=eventVideo%>">Session video</a></p>
               <p><a href="<%=eventPPT%>">Session presentation</a></p>

           </div>

        
           <div class="event__details-img">

             <!-- <i class="flaticon-circle-button-thick-outline"></i>
             <i class="flaticon-dry-clean" ></i>
             <i class="flaticon-half-circumference"></i>
             <i class="flaticon-doodle" ></i> -->

             <i class="flaticon-commercial-label-black-shape"></i>
             <i class="flaticon-dry-clean"></i>
             <i class="flaticon-dry-clean circle-2"></i>
             <i class="flaticon-plus-1 "></i>
             <i class="flaticon-plus-1 plus-2"></i>
             <i class="flaticon-play-arrow"></i>
           </div>
        </section>
       <section class="section-speaker">  
         <h2>Speaker</h2>
         <div class="speakers">
        <div class="speaker_card">
             <img src="/images/upload/<%=speakerImage%>"alt="">
           <p> <%=speakerName%></p>
        </div>
    </div>
      
   </div>     
  

        </section>
    </main>

</body>
</html>